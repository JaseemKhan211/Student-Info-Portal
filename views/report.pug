extends base

block content
    h1 Student Report
    table
        thead
            tr
                th Name
                th Student ID
                th Email
                th Department
                th Photo
        tbody
            each student in students 
                tr
                    td= student.Studentname
                    td= student.studentID
                    td= student.email
                    td= student.department
                    td 
                        img(src='/img/students/' + student.photo.split('/').pop(), alt="Student Photo", style="width:50px; height:auto;") 
